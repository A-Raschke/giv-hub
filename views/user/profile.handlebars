<div id="userProfile">

    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="col-md-10 mt-5 pt-5">
                <div class="row z-depth-3">
                    {{!-- User picture goes here --}}
                    <div class="col-sm-4 bg-info rounded-left">
                        {{#if this.user.avatar}}
                        <img class="avatar" src="{{this.user.avatar}}" alt="avatar-{{this.user.name}}">
                        {{else}}
                        <img class="bi me-2" width="60" height="52" role="img" src="../images/givhub_logo.png"
                            alt="givhub logo">
                        {{/if}}
                    </div>
                    {{!-- Username and contact information --}}
                    <div class="col-sm-8 bg-white rounded-right">
                        <h3 class="mt-3 text-center">{{this.user.username}}</h3>
                        <hr class="badge-primary mt-0 w-25">
                        <div class="row">
                            <div class="col-sm-6">
                                <p class="font-weight-bold">Email:</p>
                                <h6 class="text-muted">{{this.user.email}}</h6>
                            </div>
                            <div class="col-sm-6">
                                <p class="font-weight-bold">Phone:</p>
                                <h6 class="text-muted">{{this.user.phone}}</h6>
                            </div>
                            <div class="col-sm-6">
                                <p class="font-weight-bold">location:</p>
                                <h6 class="text-muted">{{this.user.location}}</h6>
                            </div>
                            {{!-- Interests/Looking For --}}
                            <div class="col-12">
                                <label for="interests" class="form-label">Interested in:</label>
                                <textarea type="text" class="form-control" id="address2"
                                    placeholder="Long Description..." rows="3"></textarea>
                            </div>
                        </div>
                    </div>
                    {{!-- Active / Pending --}}
                    <h4 class="mt-3 ">Offers</h4>
                    <hr class="bg-primary">
                    <div class="row">
                        <div class="col-sm-6">
                            <p class="font-weight-bold">recent</p>
                            <h6>{{this.user.offers}}</h6>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {{else}}
    <div class="b-example-divider"></div>
    <div class="container my-5">
        <div class="row p-4 pb-0 pe-lg-0 pt-lg-5 align-items-center rounded-3 border shadow-lg">
            <div class="col-lg-7 p-3 p-lg-5 pt-lg-3">
                <h1 class="display-4 fw-bold lh-1">Login or Signup to view content</h1>
                <p class="lead">Quickly design and customize responsive mobile-first sites with Bootstrap, the worldâ€™s
                    most popular front-end open source toolkit, featuring Sass variables and mixins, responsive grid
                    system, extensive prebuilt components, and powerful JavaScript plugins.</p>
                <div class="d-grid gap-2 d-md-flex justify-content-md-start mb-4 mb-lg-3">
                    <a href="/login" type="button" class="btn btn-warning btn-lg px-4 me-md-2 fw-bold">Sign Up</a>
                    <a href="/" type="button" class="btn btn-outline-secondary btn-lg px-4">Return</a>
                </div>
            </div>
            <div class="col-lg-4 offset-lg-1 p-0 overflow-hidden shadow-lg">
                <img class="rounded-lg-3" src="bootstrap-docs.png" alt="" width="720">
            </div>
        </div>
    </div>
    {{/if}}